{{!
    @template core_contentbank/list

    Example context (json):
    {
        "contents": [
            {
                "name": "accordion.h5p",
                "link": "http://something/contentbank/contenttype/h5p/view.php?url=http://something/pluginfile.php/1/contentbank/public/accordion.h5p",
                "icon" : "<img class='icon' alt='accordion.h5p' aria-hidden='true' src='http://something/theme/image.php/boost/core/1581597850/f/h5p-64'>"
            },
            {
                "name": "resume.pdf",
                "icon": "<img class='icon' alt='resume.pdf' aria-hidden='true' src='http://something/theme/image.php/boost/core/1584597850/f/pdf-64'>"
            }
        ],
        "tools": [
            {
                "name": "Upload",
                "link": "http://something/contentbank/contenttype/h5p/view.php?url=http://something/pluginfile.php/1/contentbank/public/accordion.h5p",
                "icon" : "i/upload"
            },
            {
                "icon": "i/export"
            }
        ]
    }

}}
<div class="content-bank-container view-grid" data-region="contentbank">
    {{>core_contentbank/toolbar}}
    <div class="pb-3 border">
        <div class="content-bank">
            <div class="cb-navbar bg-light p-2 border-bottom">
                {{#pix}} i/folder {{/pix}}
            </div>
            <div class="cb-content-wrapper d-flex flex-wrap p-2">
                <div class="cb-heading">
                    <div class="cb-file cb-column d-flex">
                        {{#str}} name, contentbank {{/str}}
                        <button class="btn btn-sm cb-btnsort dir-none ml-auto" data-action="sortname" data-direction="">
                            {{#pix}} t/sort, core, {{#str}}sort, core, name{{/str}} {{/pix}}
                            {{#pix}} t/sort_desc, core, {{#str}}desc, core{{/str}} {{/pix}}
                            {{#pix}} t/sort_asc, core, {{#str}}asc, core{{/str}} {{/pix}}
                        </button>
                    </div>
                    <div class="cb-date cb-column d-flex">
                        {{#str}} lastmodified, contentbank {{/str}}
                        <button class="btn btn-sm cb-btnsort dir-none ml-auto" data-action="sortdate"  data-direction="" title="sort ascending">
                            {{#pix}} t/sort, core, {{#str}}sort, core, name{{/str}} {{/pix}}
                            {{#pix}} t/sort_desc, core, {{#str}}desc, core{{/str}} {{/pix}}
                            {{#pix}} t/sort_asc, core, {{#str}}asc, core{{/str}} {{/pix}}
                        </button>
                    </div>
                    <div class="cb-size cb-column d-flex">
                        {{#str}} size, contentbank {{/str}}
                        <button class="btn btn-sm cb-btnsort dir-none ml-auto" data-action="sortsize"  data-direction="" title="sort ascending">
                            {{#pix}} t/sort, core, {{#str}}sort, core, name{{/str}} {{/pix}}
                            {{#pix}} t/sort_desc, core, {{#str}}desc, core{{/str}} {{/pix}}
                            {{#pix}} t/sort_asc, core, {{#str}}asc, core{{/str}} {{/pix}}
                        </button>
                    </div>
                    <div class="cb-type cb-column d-flex last">
                        {{#str}} type, contentbank {{/str}}
                        <button class="btn btn-sm cb-btnsort dir-none ml-auto" data-action="sorttype"  data-direction="" title="sort ascending">
                            {{#pix}} t/sort, core, {{#str}}sort, core, name{{/str}} {{/pix}}
                            {{#pix}} t/sort_desc, core, {{#str}}desc, core{{/str}} {{/pix}}
                            {{#pix}} t/sort_asc, core, {{#str}}asc, core{{/str}} {{/pix}}
                        </button>
                    </div>
                </div>
                <div class="w-100 d-flex flex-wrap" data-region="filearea">
                    {{#contents}}
                        <div class="cb-listitem" data-file="{{{name}}}">
                            <div class="cb-file cb-column">
                                <div class="cb-thumbnail">
                                    {{{ icon }}}
                                </div>

                                {{#link}}
                                    <a href="{{{ link }}}" class="cb-link" title="{{{name}}}">
                                {{/link}}
                                        <span class="cb-name word-break-all clamp-2 text-center" >
                                            {{{ name }}}
                                        </span>
                                {{#link}}
                                    </a>
                                {{/link}}
                            </div>
                            <div class="cb-date cb-column">
                            </div>
                            <div class="cb-size cb-column">
                            </div>
                            <div class="cb-type cb-column last">
                            </div>
                        </div>
                    {{/contents}}
                </div>
            </div>
        </div>
    </div>
</div>
{{#js}}
require([
    'core_contentbank/views',
], function(Views) {
    Views.init();
});
{{/js}}
